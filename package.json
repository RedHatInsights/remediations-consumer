{
  "name": "remediations-consumer",
  "version": "0.1.0",
  "description": "Consumer of platform messages for Remediations",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:RedHatInsights/remediations-consumer.git"
  },
  "scripts": {
    "coverage": "npm run db:ims && NODE_ENV=test LOG_LEVEL=error jest -i --coverage",
    "db:ims": "NODE_ENV=test npm-run-all db:init db:migrate db:seed",
    "db:init": "DB_DATABASE=postgres node test/init.js",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "lint": "eslint src test knexfile.js",
    "start": "LOG_PRETTY=true node src/app.js",
    "test": "npm run db:ims && NODE_ENV=test LOG_LEVEL=error jest -i",
    "verify": "npm-run-all lint coverage"
  },
  "author": "Jozef Hartinger",
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "bluebird": "^3.5.4",
    "convict": "^5.0.0",
    "kafka-node": "^4.1.3",
    "knex": "^0.16.5",
    "pg": "^7.11.0",
    "pino": "^5.12.5",
    "pino-pretty": "^3.0.0",
    "prom-client": "^11.3.0"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "should": "^13.2.3",
    "sinon": "^7.3.2"
  }
}
