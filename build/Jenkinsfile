#!/usr/bin/env groovy

NS='remediations-pr'

node('nodejs') {

    env.NODEJS_HOME = "${tool 'node-16'}"
    env.PATH="${env.NODEJS_HOME}/bin:${env.PATH}"

    checkout scm

    def utils = load "./build/utils.groovy"

    sh 'git rev-parse HEAD'

    stage('build') {
        sh 'npm ci'
        sh 'npm run compile'
    }

    openshift.withCluster() {
        utils.withScaledEnv(NS) {
            env.DB_HOST="postgres.${NS}.svc"

            stage('verify') {
                sh 'npm run verify'
            }
        }
    }
}
