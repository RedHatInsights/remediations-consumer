{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./dist",
        "allowJs": true,
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "target": "es2017",
        "baseUrl": ".",
        "sourceMap": true
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.js"   // for DB init, migration & seeding
    ],
    "exclude": [
        "**/*.unit.ts",
        "**/*.integration.ts"
    ],
    "types": [
        "node"
    ]
}
